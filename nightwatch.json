{
  "src_folders": ["./tests"],

  "webdriver": {
    "start_process": true,
     "server_path": "/usr/local/lib/node_modules/chromedriver",
    "cli_args": [ "--verbose"],
    "port": 9515
  },
  
  "chrome": {
  desiredCapabilities: {
    browserName: 'chrome',
    javascriptEnabled: true,
    chromeOptions: {
      args: [ 'headless' ]
    }
  }
  },

  "test_settings" : {
    "default" : {
      "desiredCapabilities" : {
        "browserName": "chrome"
      },
      "end_session_on_fail" : false,
      "skip_testcases_on_fail" : false
    }
  }
}
